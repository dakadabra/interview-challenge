{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "data": {
      "type": "library",
      "root": "libs/data",
      "entryFile": "index",
      "sourceRoot": "libs/data/src",
      "compilerOptions": {
        "tsConfigPath": "libs/data/tsconfig.lib.json"
      }
    },
    "tasks": {
      "type": "library",
      "root": "libs/tasks",
      "entryFile": "index",
      "sourceRoot": "libs/tasks/src",
      "compilerOptions": {
        "tsConfigPath": "libs/tasks/tsconfig.lib.json"
      }
    }
  }
}